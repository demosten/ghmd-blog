<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}{{ config.title }}{% endblock %}</title>
    {% if config.description %}
    <meta name="description" content="{{ config.description }}">
    {% endif %}
    <link rel="stylesheet" href="{{ config.get_asset_url('assets/css/base.css', page_depth|default(0)) }}">
    <link rel="stylesheet" href="{{ config.get_asset_url('assets/css/fonts/body/' + config.font_body + '.css', page_depth|default(0)) }}">
    <link rel="stylesheet" href="{{ config.get_asset_url('assets/css/fonts/code/' + config.font_code + '.css', page_depth|default(0)) }}">
    <link rel="stylesheet" href="{{ config.get_asset_url('assets/css/' + config.theme_light + '.css', page_depth|default(0)) }}">
    <link rel="stylesheet" href="{{ config.get_asset_url('assets/css/' + config.theme_dark + '.css', page_depth|default(0)) }}">
    <link rel="stylesheet" href="{{ config.get_asset_url('assets/css/syntax_light.css', page_depth|default(0)) }}">
    <link rel="stylesheet" href="{{ config.get_asset_url('assets/css/syntax_dark.css', page_depth|default(0)) }}">
    <script>
        // Set theme before page renders to avoid flash
        (function() {
            // Check URL parameter first (for file:// protocol compatibility)
            const urlParams = new URLSearchParams(window.location.search);
            const urlTheme = urlParams.get('theme');

            if (urlTheme) {
                document.documentElement.setAttribute('data-theme', urlTheme);
                // Also save to localStorage for HTTP serving
                try {
                    localStorage.setItem('theme', urlTheme);
                } catch (e) {
                    // localStorage might not be available
                }
            } else {
                // Check localStorage
                let savedTheme = null;
                try {
                    savedTheme = localStorage.getItem('theme');
                } catch (e) {
                    // localStorage might not be available
                }

                if (savedTheme) {
                    document.documentElement.setAttribute('data-theme', savedTheme);
                } else {
                    // Fall back to system preference
                    if (window.matchMedia && window.matchMedia('(prefers-color-scheme: dark)').matches) {
                        document.documentElement.setAttribute('data-theme', 'dark');
                    } else {
                        document.documentElement.setAttribute('data-theme', 'light');
                    }
                }
            }
        })();
    </script>
    {% block head %}{% endblock %}
</head>
<body>
    <header class="site-header">
        <button class="theme-toggle" id="theme-toggle" aria-label="Toggle theme">
            <span id="theme-icon">ðŸŒ™</span>
        </button>
        <div class="header-content">
            <a href="{{ config.get_asset_url('index.html') }}" class="site-title">{{ config.title }}</a>
            {% if config.description %}
            <p class="site-description">{{ config.description }}</p>
            {% endif %}
        </div>
    </header>

    <main class="main-content">
        {% block content %}{% endblock %}
    </main>

    <footer class="site-footer">
        <p>Powered by <a href="https://github.com/yourusername/ghmd-blog" target="_blank" rel="noopener">ghmd-blog</a></p>
    </footer>

    <script>
        (function() {
            const themeToggle = document.getElementById('theme-toggle');
            const themeIcon = document.getElementById('theme-icon');
            const html = document.documentElement;

            // Track current theme in memory
            let currentTheme = null;

            // Get initial theme
            function getInitialTheme() {
                // Check URL parameter first
                const urlParams = new URLSearchParams(window.location.search);
                const urlTheme = urlParams.get('theme');
                if (urlTheme) {
                    return urlTheme;
                }

                // Check localStorage
                try {
                    const savedTheme = localStorage.getItem('theme');
                    if (savedTheme) {
                        return savedTheme;
                    }
                } catch (e) {
                    // localStorage might not be available
                }

                // Check system preference
                if (window.matchMedia && window.matchMedia('(prefers-color-scheme: dark)').matches) {
                    return 'dark';
                }
                return 'light';
            }

            // Update icon based on theme
            function updateIcon(theme) {
                themeIcon.textContent = theme === 'dark' ? 'â˜€ï¸' : 'ðŸŒ™';
            }

            // Add theme parameter to all internal links
            function updateAllLinks(theme) {
                const links = document.querySelectorAll('a[href]');
                links.forEach(link => {
                    const href = link.getAttribute('href');
                    // Only update internal links (not external or anchor links)
                    if (href && !href.startsWith('http') && !href.startsWith('#') && !href.startsWith('mailto:')) {
                        // Parse the href to get just the filename
                        const hrefWithoutParams = href.split('?')[0];
                        link.setAttribute('href', hrefWithoutParams + '?theme=' + theme);
                    }
                });
            }

            // Update current page URL
            function updateCurrentUrl(theme) {
                try {
                    const url = new URL(window.location.href);
                    url.searchParams.set('theme', theme);
                    window.history.replaceState({}, '', url);
                } catch (e) {
                    // URL manipulation might fail
                }
            }

            // Set theme
            function setTheme(theme) {
                currentTheme = theme;
                html.setAttribute('data-theme', theme);

                // Save to localStorage (works for HTTP serving)
                try {
                    localStorage.setItem('theme', theme);
                } catch (e) {
                    // localStorage might not be available in file:// protocol
                }

                // Update current page URL
                updateCurrentUrl(theme);

                // Update all links with theme parameter (works for file:// protocol)
                updateAllLinks(theme);

                updateIcon(theme);
            }

            // Initialize
            currentTheme = getInitialTheme();
            html.setAttribute('data-theme', currentTheme);
            updateIcon(currentTheme);
            updateAllLinks(currentTheme);

            // Toggle theme on button click
            themeToggle.addEventListener('click', function() {
                const newTheme = currentTheme === 'dark' ? 'light' : 'dark';
                setTheme(newTheme);
            });
        })();
    </script>
</body>
</html>
